{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmit": false,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "ts-publish": ["src/main"]
    },
    "lib": ["es2015"],
    "rootDir": "src",
    "target": "es5"
  },
  "exclude": [
    "build",
    "node_modules",
    "src/test/fixtures"
  ]
}
